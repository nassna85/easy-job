{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/profile-user') }}
{% endblock %}

{% block title %}Modification de mot de passe de {{ user.fullName }}{% endblock %}

{% block body %}
    <section class="edit-user-password-form">
        <div class="container">
            <h2>Modifier mon mot de passe</h2>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Confirmer</button>
                <a href="{{ path('account_profile') }}" class="btn btn-danger">Annuler</a>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}