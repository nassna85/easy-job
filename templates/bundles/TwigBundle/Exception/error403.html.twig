{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/page-error') }}
{% endblock %}

{% block title %}Page non trouvée{% endblock %}

{% block body %}
    <section class="page-not-found">
        <div class="container">
            <div class="text-center">
                <img src="{{ asset('/build/images/page-error-403.svg') }}" alt="page non trouvée" class="img-fluid">
                <div class="d-block">
                    <a href="{{ path('homepage') }}" class="btn btn-danger">
                        <i class="fas fa-arrow-left"></i>
                        Vers l'accueil
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}