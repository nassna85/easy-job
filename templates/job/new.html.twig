{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/new-job') }}
{% endblock %}

{% block title %}Ajouter un nouvel emploi{% endblock %}

{% block body %}
    <section class="jumbotron jumbotron-fluid new-job" style="margin-top: 81px;">
        <div class="container">
            <div class="row align-items-center text-center text-md-left">
                <div class="col-md-6">
                    <h1>Ajouter un nouvel emploi</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Architecto assumenda autem consectetur, dignissimos doloremque doloribus dolorum eius esse exercitationem facere hic incidunt invent.</p>
                </div>
                <div class="col-md-6">
                    <img src="{{ asset('/build/images/header-new-job.svg') }}" alt="nouvel emploi" class="img-fluid">
                </div>
            </div>
        </div>
    </section>
    <section class="new-job-form">
        <div class="container">
            <h1 class="h3 mb-5">Créer un nouvel emploi</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Créer un nouvel emploi</button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}