{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un emploi{% endblock %}

{% block body %}
    <section class="admin-edit-job" style="margin-top: 120px">
        <div class="container">
            <a href="{{ path('admin_job_index') }}" class="btn btn-primary btn-sm mb-5">
                <i class="fas fa-arrow-left"></i>
                Retour à la liste des emplois
            </a>
            <h1 class="mb-4">Modification de l'emploi <strong>{{ job.title }}</strong> avec la référence <strong>{{ job.id }}</strong></h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-success">Confirmer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}