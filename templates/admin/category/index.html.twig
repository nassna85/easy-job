{% extends 'admin/base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <section class="admin-categories" style="margin-top: 120px">
        <div class="container">
            <h1 class="mb-5">Liste des catégories</h1>

            <a href="{{ path('admin_category_new') }}" class="btn btn-success mb-5">
                <i class="fas fa-plus"></i>
                Ajouter une catégorie
            </a>

            <table class="table table-hover table-responsive text-nowrap">
                <thead>
                <tr>
                    <th scope="col">Identifiant</th>
                    <th scope="col">Nom de la catégorie</th>
                    <th scope="col">Nombre d'emplois</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td class="text-center">{{ category.jobs | length }}</td>
                        <td class="d-flex">
                            <a href="{{ path('admin_category_edit', {id:category.id, slug:category.slug}) }}" class="btn btn-sm btn-success mr-2">
                                <i class="fas fa-pen"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}
