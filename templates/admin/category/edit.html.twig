{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'une catégorie{% endblock %}

{% block body %}
    <section class="admin-category-edit" style="margin-top: 120px">
        <div class="container">
            <h1 class="mb-4">Modifier la catégorie <b>{{ category.name }}</b></h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-success">Confirmer la modification</button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}