{% extends 'admin/base.html.twig' %}

{% block title %}Créer une nouvelle catégorie{% endblock %}

{% block body %}
    <section class="admin-new-category" style="margin-top: 120px">
        <div class="container">
            <a href="{{ path('admin_category_index') }}" class="btn btn-primary btn-sm mb-5">
                <i class="fas fa-arrow-left"></i>
                Retour à la liste de catégories
            </a>
            <h1 class="mb-5">Créer une nouvelle catégorie</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-success">Créer une nouvelle catégorie</button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}