{% extends 'admin/base.html.twig' %}

{% block title %}Modifier une demande de contact{% endblock %}

{% block body %}
    <section class="admin-edit-contact" style="margin-top: 120px">
        <div class="container">
            <a href="{{ path('admin_contact_index') }}" class="btn btn-primary mb-4">
                <i class="fas fa-arrow-left"></i>
                Retour à la liste des contacts
            </a>
            <h1 class="mb-5">Modifier la demande de contact n° {{ contact.id }}</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-success">Confirmer la modification</button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}