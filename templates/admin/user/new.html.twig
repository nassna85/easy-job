{% extends 'admin/base.html.twig' %}

{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block body %}
    <section class="admin-user-edit" style="margin-top: 120px">
        <div class="container">
            <a href="{{ path('admin_user_index') }}" class="btn btn-primary mb-5">
                <i class="fas fa-arrow-left"></i>
                Retourner à la liste des utilisateurs
            </a>
            <h1 class="mb-4">Créer un nouvel utilisateur</h1>

            <div class="admin-form-user bg-light p-5" style="max-width: 600px;">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Créer un utilisateur</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}