{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un utilisateur{% endblock %}

{% block body %}
    <section class="admin-user-edit" style="margin-top: 120px">
        <div class="container">
            <a href="{{ path('admin_user_index') }}" class="btn btn-primary mb-5">
                <i class="fas fa-arrow-left"></i>
                Retourner à la liste des utilisateurs
            </a>
            <h1 class="mb-4">Modifier l'utilisateur n° {{ user.id }}</h1>

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-success">Confirmer les modifications</button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}